<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_ntrip/models/fields"
	>
		<field name="id" type="text" default="0"
			readonly="true" class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" 	description ="JGLOBAL_FIELD_ID_DESC" />

		<field name="name" type="text" class="inputbox"
			size="40" label="COM_NTRIP_FIELD_NAME_LABEL"
			description="COM_NTRIP_FIELD_NAME_DESC" required="true" />

		<field name="alias" type="text" class="inputbox"
			size="40" label="JFIELD_ALIAS_LABEL"
			description="COM_NTRIP_FIELD_ALIAS_DESC" />

		<field name="catid" type="categoryedit" extension="com_ntrip"
			label="JCATEGORY" description="COM_NTRIP_FIELD_CATEGORY_DESC"
			class="inputbox" required="true"
			addfieldpath="/administrator/components/com_categories/models/fields"
		>
			<option value="">- JCATEGORY -</option>
		</field>
		
		<field name="type" type="customfield" class="inputbox"
			size="40" extension="com_ntrip.custom_field_hotel"
			label="COM_NTRIP_FIELD_TYPE_LABEL"
			description="COM_NTRIP_FIELD_TYPE_DESC" required="true" />

		<field name="images" type="file" class="inputbox"
			size="40" label="COM_NTRIP_FIELD_IMAGES_LABEL"
			description="COM_NTRIP_FIELD_IMAGES_DESC" />

		<field name="del_image" type="checkbox" value="1" label="Delete image" />

		<field name="state" type="list"
			label="JSTATUS" description="COM_NTRIP_FIELD_STATE_DESC"
			class="inputbox" size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		
		<field name="price" type="text" class="inputbox"
			size="40" label="COM_NTRIP_FIELD_PRICE_LABEL"
			description="COM_NTRIP_FIELD_PRICE_DESC" />
		
		<field name="system_rank" type="text" class="inputbox"
			size="40" label="COM_NTRIP_FIELD_SYSTEM_RANK_LABEL"
			description="COM_NTRIP_FIELD_SYSTEM_RANK_DESC" />
		
		<field name="user_rank" type="text" class="inputbox"
			size="40" label="COM_NTRIP_FIELD_USER_RANK_LABEL"
			description="COM_NTRIP_FIELD_USER_RANK_DESC" />
		
		<field
				name="hotel_class"
				type="list" required="true"
				label="COM_NTRIP_FIELD_HOTEL_CLASS_LABEL"
				description="COM_NTRIP_FIELD_HOTEL_CLASS_DESC">
				<option value="">- Select -</option>
				<option	value="1">1</option>
				<option value="2">2</option>
				<option	value="3">3</option>
				<option value="4">4</option>
				<option	value="5">5</option>
			</field>
		
		<field name="website" type="text" class="inputbox"
			size="40" label="COM_NTRIP_FIELD_WEBSITE_LABEL"
			description="COM_NTRIP_FIELD_WEBSITE_DESC" />
		
		<field name="email" type="text" class="inputbox"
			size="40" label="COM_NTRIP_FIELD_EMAIL_LABEL"
			description="COM_NTRIP_FIELD_EMAIL_DESC" />

		<field name="description" type="editor" class="inputbox"
			label="JGLOBAL_DESCRIPTION"
			description="COM_NTRIP_FIELD_DESCRIPTION_DESC" 
			filter="JComponentHelper::filterText" buttons="true" />

	</fieldset>

	<fieldset name="publish"
		label="COM_NTRIP_GROUP_LABEL_PUBLISHING_DETAILS"
	>

		<field name="created" type="calendar"
			label="COM_NTRIP_FIELD_CREATED_LABEL" description="COM_NTRIP_FIELD_CREATED_DESC"
			class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S"
			filter="user_utc" />

		<field name="publish_up" type="calendar"
			label="COM_NTRIP_FIELD_PUBLISH_UP_LABEL" description="COM_NTRIP_FIELD_PUBLISH_UP_DESC"
			class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22"
			filter="user_utc" />

		<field name="publish_down" type="calendar"
			label="COM_NTRIP_FIELD_PUBLISH_DOWN_LABEL" description="COM_NTRIP_FIELD_PUBLISH_DOWN_DESC"
			class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22"
			filter="user_utc" />
		
		<field name="promotion_title" type="text" class="inputbox"
			size="40" label="COM_NTRIP_FIELD_PROMOTION_TITLE_LABEL"
			description="COM_NTRIP_FIELD_PROMOTION_TITLE_DESC" />

		<field name="promotion_desc" type="textarea" class="inputbox"
			rows="3" cols="30" label="COM_NTRIP_FIELD_PROMOTION_DESC_LABEL"
			description="COM_NTRIP_FIELD_PROMOTION_DESC_DESC" />

	</fieldset>

	<fieldset name="metadata"
		label="JGLOBAL_FIELDSET_METADATA_OPTIONS"
	>

		<field name="metakey" type="textarea" class="inputbox"
			rows="3" cols="30" label="JFIELD_META_KEYWORDS_LABEL"
			description="COM_NTRIP_FIELD_METAKEYWORDS_DESC" />

		<field name="own_prefix" type="radio"
			label="COM_NTRIP_FIELD_BANNEROWNPREFIX_LABEL"
			description="COM_NTRIP_FIELD_BANNEROWNPREFIX_DESC"
			default="0" class="inputbox"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field name="metakey_prefix" type="text"
			label="COM_NTRIP_FIELD_METAKEYWORDPREFIX_LABEL"
			description="COM_NTRIP_FIELD_METAKEYWORDPREFIX_DESC" />

	</fieldset>

</form>
