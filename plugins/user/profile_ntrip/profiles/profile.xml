<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="profile">
		<fieldset name="profile"
			label="PLG_USER_PROFILE_SLIDER_LABEL"
		>
			<field
				name="job"
				type="text"
				id="job"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_JOB_LABEL"
				size="30"
			/>

			<field
				name="address"
				type="text"
				id="address"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_ADDRESS_LABEL"
				size="30"
			/>
			
			<field
				name="city"
				type="category"
				id="city"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_CITY_LABEL"
				size="1"
				extension="com_ntrip"
			/>

			<field
				name="phone"
				type="tel"
				id="phone"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_PHONE_LABEL"
				size="30"
			/>

			<field
				name="website"
				type="url"
				id="website"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_WEB_SITE_LABEL"
				size="30"
			/>
			<field
				name="gender"
				type="list"
				description="PLG_USER_PROFILE_FIELD_Gender_DESC"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_GENDER_LABEL"
				size="1"
			>
				<option value="0">PLG_USER_PROFILE_FIELD_GENDER_MALE</option>
				<option value="1">PLG_USER_PROFILE_FIELD_GENDER_FEMALE</option>
			</field>
			<field
				name="aboutme"
				type="textarea"
				label="PLG_USER_PROFILE_FIELD_ABOUT_ME_LABEL"
				cols="30"
				rows="5"
				filter="safehtml"
			/>
			<field
				name="dob"
				type="calendar"
				label="PLG_USER_PROFILE_FIELD_DOB_LABEL"
			/>
			
			<field
				name="tos"
				type="tos"
				label="PLG_USER_PROFILE_FIELD_TOS_LABEL">
				<option value="1">PLG_USER_PROFILE_OPTION_AGREE</option>
			</field>
			
			<field
				name="avatar"
				type="file"
				id="avatar"
				filter="string"
				label="Avatar"
				message="Logo"
				size="30"
			/>
            <field
                    name="avatar_old"
                    type="hidden"
                    id="avatar_old"
                    filter="string"
                    label="Avatar"
                    message="Logo"
                    size="30"
                    />

		</fieldset>
		
	</fields>
</form>
